{
  "env": {
    "commonjs": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {},
	"parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "rules": {
    "indent": [ "error", 2 ],
    "linebreak-style": [ "error", "unix" ],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": [ "error", "always" ]
  }
}
